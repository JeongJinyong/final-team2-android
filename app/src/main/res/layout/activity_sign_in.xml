<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context=".screen.signin.SignInActivity">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp"/>

    <TextView
            android:id="@+id/tv_signin_tab_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="6sp"
            android:fontFamily="@font/spoqahansansbold"
            android:layout_marginTop="44dp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/gl_start"
            app:layout_constraintRight_toRightOf="@+id/gl_end"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_signin_tab_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="14sp"
            android:textColor="#999999"
            android:lineSpacingExtra="6sp"
            android:fontFamily="@font/spoqahansansbold"
            android:layout_marginTop="44dp"
            android:layout_marginStart="37dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_signin_tab_signin"
            app:layout_constraintRight_toRightOf="@+id/gl_end"
            app:layout_constraintTop_toTopOf="parent"/>



    <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:textColor="@android:color/white"
            android:textColorHint="#959dad"
            android:backgroundTint="#959dad"
            android:textSize="24sp"
            android:lineSpacingExtra="20sp"
            android:fontFamily="@font/spoqahansansregular"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="47dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/gl_start"
            app:layout_constraintRight_toRightOf="@+id/gl_end"
            app:layout_constraintTop_toBottomOf="@+id/tv_signin_tab_signup"
            android:importantForAutofill="no"/>

    <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:textColor="@android:color/white"
            android:textColorHint="#959dad"
            android:backgroundTint="#959dad"
            android:textSize="24sp"
            android:lineSpacingExtra="20sp"
            android:fontFamily="@font/spoqahansansregular"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="2dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/gl_start"
            app:layout_constraintRight_toRightOf="@+id/gl_end"
            app:layout_constraintTop_toBottomOf="@+id/et_email"
            android:importantForAutofill="no"/>

    <Button
            android:id="@+id/btn_signin"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:text="로그인"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:lineSpacingExtra="24sp"
            android:fontFamily="@font/spoqahansanslight"
            android:layout_marginTop="12dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/gl_start"
            app:layout_constraintRight_toRightOf="@+id/gl_end"
            app:layout_constraintTop_toBottomOf="@+id/et_password"/>

    <FrameLayout
            android:id="@+id/fl_signup_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>