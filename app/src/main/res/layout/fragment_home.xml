<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/black">

    <FrameLayout
        android:id="@+id/home_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.def.team2.screen.custom.VerticalTextView
        android:id="@+id/home_rank_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_tap_start_margin"
        android:layout_marginTop="@dimen/home_tap_rank_top_margin"
        android:fontFamily="@font/spoqahansansbold"
        android:gravity="bottom"
        android:includeFontPadding="false"
        android:text="@string/str_rank_en"
        android:textColor="@color/selector_black_menu_txt"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/home_rank_btn_line"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/hone_tap_underline_start_margin"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/home_rank_btn_txt"
        app:layout_constraintStart_toEndOf="@id/home_rank_btn_txt"
        app:layout_constraintTop_toTopOf="@id/home_rank_btn_txt" />

    <com.def.team2.screen.custom.VerticalTextView
        android:id="@+id/home_map_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_tap_map_top_margin"
        android:fontFamily="@font/spoqahansanslight"
        android:gravity="bottom"
        android:includeFontPadding="false"
        android:text="@string/str_map"
        android:textColor="@color/selector_map_menu_txt"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/home_rank_btn_txt"
        app:layout_constraintTop_toBottomOf="@id/home_rank_btn_txt" />

    <View
        android:id="@+id/home_map_btn_line"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/hone_tap_underline_start_margin"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/home_map_btn_txt"
        app:layout_constraintStart_toEndOf="@id/home_map_btn_txt"
        app:layout_constraintTop_toTopOf="@id/home_map_btn_txt" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_search"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search_white" />


</androidx.constraintlayout.widget.ConstraintLayout>