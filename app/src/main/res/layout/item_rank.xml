<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_rank_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/spoqahansanslight"
        android:text="2위"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/item_rank_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_rank_img" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_rank_img"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_rank_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_rank_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/spoqahansansbold"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        app:layout_constraintStart_toEndOf="@id/item_rank_img"
        app:layout_constraintTop_toTopOf="@id/item_rank_img"
        tools:text="아이유" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_rank_vote_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/spoqahansanslight"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/item_rank_img"
        app:layout_constraintStart_toStartOf="@id/item_rank_name_txt"
        app:layout_constraintTop_toBottomOf="@id/item_rank_name_txt"
        tools:text="123,456" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_rank_vote_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintBottom_toBottomOf="@id/item_rank_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_rank_img"
        tools:src="@drawable/img_vote" />
</androidx.constraintlayout.widget.ConstraintLayout>