<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_profile_idol_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_profile_idol_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/item_profile_idol_img"
        app:layout_constraintEnd_toStartOf="@id/item_profile_idol_delete"
        app:layout_constraintStart_toEndOf="@id/item_profile_idol_img"
        app:layout_constraintTop_toTopOf="@id/item_profile_idol_img"
        tools:text="아이유" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_profile_idol_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@id/item_profile_idol_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_profile_idol_img"
        app:srcCompat="@drawable/ic_close" />

</androidx.constraintlayout.widget.ConstraintLayout>