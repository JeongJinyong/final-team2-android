<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_chat_room_left_profile_bg"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_chat_room_left_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_default_chat_profile"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_chat_room_left_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="2sp"
        android:fontFamily="@font/spoqahansansbold"
        android:layout_marginStart="8dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/cardview_chat_room_left_profile_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardview_chat_room_left_profile_bg"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_chat_room_left_profile_bg"
        tools:text="ㅎㅎㅎㅎ" />

    <TextView
        android:id="@+id/tv_chat_room_left_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="7sp"
        android:fontFamily="@font/spoqahansansregular"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_chat_left_content"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/cardview_chat_room_left_profile_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_room_left_name"
        tools:text="제목없이 본문 가나다라마바사가나다라마바사가나다라마바사가나다라마바사가가나다라마바사 가나다라마바사가나다라마바사가나다라마바사가나다라마바사가 나다라마바사가나다라마바사가" />

    <TextView
        android:id="@+id/tv_chat_room_left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#cccccc"
        android:lineSpacingExtra="2sp"
        android:fontFamily="@font/spoqahansansregular"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_room_left_content"
        tools:text="1:23 PM" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_room_left_time"/>

</androidx.constraintlayout.widget.ConstraintLayout>